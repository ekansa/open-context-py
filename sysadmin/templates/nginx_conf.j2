upstream django {
   server unix:///opt/ocweb/uwsgi_oc.sock;
}

server {
    listen  80;
    server_name localhost;
    charset utf-8;
    access_log /opt/ocweb/nginx_access.log;
    error_log /opt/ocweb/nginx_error.log;

    location  /static/ {
       autoindex on;
       alias  {{oc_install_dir}}/static/;
    }

    location / {
        try_files $uri @django;
    }

    location @django {
       uwsgi_pass django;
       include uwsgi_params;
    }
}